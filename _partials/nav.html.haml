      %a.btn.btn-navbar(data-toggle="collapse" data-target=".nav-collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .nav-collapse.collapse
        %ul#nav.nav
          %li{:class=>"#{'active' if page.real_page.output_path.start_with?('/index') }" }<
            %a(href="#{site.base_url}/") Home
          %li{:class=>"#{'active' if page.real_page.output_path.start_with?('/about') }" }<
            %a(href="#{site.base_url}/about/") About
          %li{:class=>"#{'active' if page.real_page.output_path.start_with?('/news') }" }<
            %a(href="#{site.base_url}/news/") News
          %li{:class=>"#{'active' if page.real_page.output_path.start_with?('/downloads') }" }<
            %a(href="#{site.base_url}/downloads/") Downloads
          %li{:class=>"#{'active' if page.real_page.output_path.start_with?('/docs') }" }<
            %a(href="#{site.base_url}/documentation/") Documentation
          %li{:class=>"#{'active' if page.real_page.output_path.start_with?('/gethelp') }" }<
            %a(href="#{site.base_url}/gethelp/") Get Help
          %li{:class=>"#{'active' if page.real_page.output_path.start_with?('/source') }" }<
            %a(href="#{site.base_url}/source/") Source Code
          %li{:class=>"#{'active' if page.real_page.output_path.start_with?('/blog') }" }<
            %a(href="#{site.base_url}/blog/") Blog
          %li.dropdown
            %a.dropdown-toggle(href="#" data-toggle="dropdown")<
              = precede 'Follow Us ' do
                %b.caret>
            %ul.dropdown-menu.projectsocialmedia
              %li<
                %a(href="https://twitter.com/search?q=%23capedwarf")<
                  %img(src="#{site.jborg_images_url}/common/socialmedia_icon40_twitter.png")
              %li<
                %a(href="https://plus.google.com/communities/105087865153736312459")<
                  %img(src="#{site.jborg_images_url}/common/socialmedia_icon40_googleplus.png")
= breadcrumb(page.real_page.output_path)
